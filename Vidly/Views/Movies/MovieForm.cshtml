@model Vidly.Models.MovieViewModel
@{
    /**/

    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Save", "Movies"))
{
    @Html.ValidationSummary(true, "Please address the following errors:")

    <div class="form-group">
        @Html.LabelFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.NumberInStock)
        @Html.TextBoxFor(x => x.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.NumberInStock)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.DateAdded)
        @Html.TextBoxFor(x => x.DateAdded, "{0:yyyy/MM/dd}", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.DateAdded)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.ReleaseDate)
        @Html.TextBoxFor(x => x.ReleaseDate, "{0:yyyy/MM/dd}", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.ReleaseDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.GenreId)
        @Html.DropDownListFor(x => x.GenreId, new SelectList(Model.Genres, "Id", "Name"), "--Select a Genre--", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.GenreId)
    </div>

    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
