@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Movies</h2>

@if (!Model.Any())
{
    <p>We don't have any movies yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
        @foreach (var eachMovie in Model)
        {
        <tr>
            <td>@Html.ActionLink(eachMovie.Name, "Edit", "Movies", new { Id = eachMovie.Id }, null)</td>
            <td>@eachMovie.Genre.Name</td>
        </tr>
        }
    </table>
}

